    "packages/**/*"
  ],
  "main": "index.js",
  "repository": "git@github.com:wahidyankf/mono.git",
  "author": "Wahidyan Kresna Fridayoka <wahidyankf@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "oao": "^2.0.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "bootstrap": "npx oao bootstrap",
    "clean": "npx oao clean",
